html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title #{title} | Kodeklubben
    link(href=relative("/assets/style.min.css") rel="stylesheet")
  body
    .container
      .row
        .col-xs-12
          .top-menu
            a.btn.btn-default(href=relative("/index.html"))
              span.glyphicon.glyphicon-home(aria-hidden="true")
              |  Hjem
        block content
        .col-xs-12
          #footer.clearfix
            if license !== false
              .license
                p: strong Lisens:
                if license
                  - license = marked(license)
                  != license
                else
                  a(rel="license" href="http://creativecommons.org/licenses/by-sa/4.0/").
                    CC BY-SA 4.0
            if author
              - author = marked(author)
              .author
                p: strong Forfatter:
                != author
            if translator
              - translator = marked(translator)
              .translator
                p: strong Oversetter:
                != translator
            if footer
              - footer = marked(footer)
              .note!= footer


    script(src=relative("/assets/script.min.js"))
    block scripts
